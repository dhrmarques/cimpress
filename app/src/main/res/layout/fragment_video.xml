<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/video_frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cimpress.pcs2057.cimpress.activity.VideoFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/video_text" />

        <Button
            android:id="@+id/btn_escolher_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pick_video"/>

        <TextView
            android:id="@+id/video_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</FrameLayout>
